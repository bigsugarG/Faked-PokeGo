<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/here"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/popukoaikon"
        android:translationZ="1dp"
        app:layout_constraintBottom_toBottomOf="@id/webView1"
        app:layout_constraintLeft_toLeftOf="@id/webView1"
        app:layout_constraintRight_toRightOf="@id/webView1"
        app:layout_constraintTop_toTopOf="@id/webView1" />

    <WebView
        android:id="@+id/webView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="30dp"
                android:text="≡"
                android:fontFamily="casual"
                android:textColor="#FFF"
                android:background="#666"
                android:onClick="onClickMenu"/>
            <TextView
                android:id="@+id/chackBag"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="Bag"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:textColor="#FFF"
                android:fontFamily="casual"
                android:background="#666"
                android:onClick="onClickBag"
                android:translationZ="1dp"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/getdata"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:textSize="18dp"
                android:text="Data"
                android:fontFamily="casual"
                android:textColor="#FFF"
                android:background="#666"
                android:onClick="onClickData"
                android:visibility="invisible"
                android:translationZ="1dp"/>
            <TextView
                android:id="@+id/reset"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="Reset"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:textColor="#FFF"
                android:fontFamily="casual"
                android:background="#666"
                android:onClick="onClickGPS"
                android:translationZ="1dp"
                android:visibility="invisible"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/data"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/acc"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="1dp"
                    android:textSize="15dp"
                    android:text="ACC"
                    android:fontFamily="casual"
                    android:textColor="#FFF"
                    android:background="#666"/>
                <TextView
                    android:id="@+id/gyro"
                    android:gravity="center"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="1dp"
                    android:textSize="15dp"
                    android:text="GYRO"
                    android:fontFamily="casual"
                    android:textColor="#FFF"
                    android:background="#666"/>
                <TextView
                    android:id="@+id/mag"
                    android:gravity="center"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="1dp"
                    android:textSize="15dp"
                    android:text="MAG"
                    android:fontFamily="casual"
                    android:textColor="#FFF"
                    android:background="#666"/>
                <TextView
                    android:id="@+id/step"
                    android:gravity="center"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="1dp"
                    android:textSize="15dp"
                    android:text="STEPs"
                    android:fontFamily="casual"
                    android:textColor="#FFF"
                    android:background="#666" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/totalpoint"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_marginLeft="110dp"
            android:layout_marginBottom="20dp"
            android:textSize="25dp"
            android:text="TOTAL"
            android:fontFamily="casual"
            android:textColor="#FFF"
            android:background="#1E90FF" />

        <LinearLayout
            android:id="@+id/baglist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:visibility="invisible">
            <TextView
                android:layout_width="190dp"
                android:layout_height="38dp"
                android:text="Bag List"
                android:textFontWeight="bold"
                android:textSize="25dp"
                android:gravity="center"
                android:background="#FFD700"
                android:textColor="#00008B"
                android:fontFamily="casual"/>
            <TextView
                android:id="@+id/bagDrug"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:text="キズ薬"
                android:textSize="20dp"
                android:background="#F0E68C"
                android:textColor="#000"
                android:fontFamily="casual"/>
            <TextView
                android:id="@+id/bagBall"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:text="モンスターボール"
                android:textSize="20dp"
                android:background="#F0E68C"
                android:textColor="#000"
                android:fontFamily="casual"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>